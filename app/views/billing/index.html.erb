<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h2 class="m-0 text-dark">Some Page</h2>
      </div>
    </div>
  </div>
</div>
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <span>
              <div class="container">
                <div class="row">
                  <div class="col-md-12 mt-4 text-center">
                    <h1> Welcome  <%= @user %></h1>
                    <button type="button" class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Tooltip on top">
                    Tooltip on top
                    </button>
                  </div>
                </div>
                <div class="row">
                  <h2 class="col-md-12 mt-5 text-center">
                  Are you ready to pay?
                  </h2>
                </div>
                <div class="row">
                  <div class="col-md-12 mt-4 text-center">
                    <%= form_tag create_payment_method_path, id: "billing-create-payment-method" do  %>
                      <%= link_to "Let's go", add_payment_method_path, remote: true, class: "btn btn-primary" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
