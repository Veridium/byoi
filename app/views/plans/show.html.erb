<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h2 class="m-0 text-dark">Plan</h2>
      </div>
      <p id="notice"><%= notice %></p>
    </div>
  </div>
</div>
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <span>
              <div class="container">
                <div class="row">
                    <%= link_to 'Edit', edit_plan_path(@plan), :class => "btn btn-primary" %> <%= link_to 'Back', plans_path, :class => "btn btn-primary" %>
                </div>
                <div class="row">
                  <p>
                    <strong>Name:</strong>
                    <%= @plan.name %>
                  </p>
                  <p>
                    <strong>Description:</strong>
                    <%= @plan.description %>
                  </p>
                  <p>
                    <strong>Product:</strong>
                    <%= @plan.product.name %>
                  </p>
                </div>
              </div>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>