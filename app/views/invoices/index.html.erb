<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h2 class="m-0 text-dark">Invoices</h2>
      </div>
      <p id="notice"><%= notice %></p>
    </div>
  </div>
</div>
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <span>
              <div class="container">
                <div class="row">
                  <%= link_to 'New Invoice', new_invoice_path, :class => "btn btn-primary" %>
                </div>
                <div class="row">
                  <div class="col-md-12 mt-4 text-center">
                    <table>
                      <thead>
                        <tr>
                          <th>User</th>
                          <th>Plan</th>
                          <th>Price</th>
                          <th>Discount</th>
                          <th>Rebate</th>
                          <th>Total</th>
                          <th colspan="3"></th>
                        </tr>
                      </thead>

                      <tbody>
                        <% @invoices.each do |invoice| %>
                        <tr>
                          <td><%= invoice.user.email %></td>
                          <td><%= invoice.plan.name %></td>
                          <td><%= invoice.plan.price %></td>
                          <td><%= invoice.discount.nil? ? "" : invoice.discount.name %></td>
                          <td><%= invoice.rebate %></td>
                          <td><%= invoice.total %></td>
                          <td><%= link_to 'Show', invoice, :class => "btn btn-primary" %></td>
                          <td><%= link_to 'Edit', edit_invoice_path(invoice), :class => "btn btn-primary" %></td>
                          <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary" %>
                          </td>
                        </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>