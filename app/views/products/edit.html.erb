<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h2 class="m-0 text-dark">Editing Product</h2>
      </div>
    </div>
  </div>
</div>
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <span>
              <div class="container">
                <div class="row">
                <%= link_to 'Show', @product, :class => "btn btn-primary" %> <%= link_to 'Back', products_path, :class => "btn btn-primary" %>
                </div>
                <div class="row">
                  <div class="col-md-12 mt-4 text-center">
                        <%= render 'form', product: @product %>
                  </div>
                </div>
              </div>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>




