<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h2 class="m-0 text-dark">Members</h2>
      </div>
      <p id="notice"><%= notice %></p>
    </div>
  </div>
</div>
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <span>
              <div class="container">
                <div class="row">
                  <%= link_to 'New Member', new_member_path, :class => "btn btn-primary" %>
                </div>
                <div class="row">
                  <div class="col-md-12 mt-4 text-center">
                    <table>
                      <thead>
                        <tr>
                          <th>Email</th>
                          <th>Admin?</th>
                          <th>Confirmed</th>
                          <th colspan="3"></th>
                        </tr>
                      </thead>

                      <tbody>
                        <% @members.each do |member| %>
                        <tr>
                          <td><%= member.user.email %></td>
                          <td><%= member.user.admin %></td>
                          <td><%= member.user.confirmed_at %></td>

                          <td><%= link_to 'Show', member, :class => "btn btn-primary" %></td>
                          <td><%= link_to 'Edit', edit_member_path(member), :class => "btn btn-primary" %></td>
                          <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary" %>
                          </td>
                        </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>